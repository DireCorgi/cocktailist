<div id="signinbox" <%= displayed ? "" : "class='exit'" %> >
  <h1>Log In</h1>
  <p>Don't have an account? <a href="#users/new" class="switch">Sign up.</a></p>
  <form>
    <input type="text" placeholder="email" name="user[email]">
    <input type="password" placeholder="password" name="user[password]">
    <button>Log In</button>
    <a href="/auth/facebook" class="button-link">Facebook Login</a>
    <a href="javascript: void(0);" class="button-link guest-login">Login as Guest</a>
  </form>
</div>

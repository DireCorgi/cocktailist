<div class="left wide">
  <div class="box">
    <h1><%= cocktail.escape('name') %></h1>
    <h3>at <%= cocktail.bar().name %></h3>
    <h2><%= cocktail.escape('liquor') %></h2>
    <h3>Ingredients:</h3>
    <ul>
      <% cocktail.escape('ingredients').split(',').forEach( function(el){ %>
        <li><%= el %></li>
      <% }); %>
    </ul>
  </div>

  <div class="box">
    <h1>My Review</h2>
    <p>Coming soon....</p>
  </div>

  <div class="box">
    <h1>Reviews</h1>
    <p>Coming soon...</p>
  </div>
</div>

<div class="rule-right"></div>

<div class="right bar">
  <%= JST['cocktails/_rSide']({bar: cocktail.bar()}) %>
</div>
